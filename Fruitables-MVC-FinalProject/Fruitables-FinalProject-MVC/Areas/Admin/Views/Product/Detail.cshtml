@model Product

<div class="container mt-5">
    <form method="post" asp-action="Create" class="forms-sample">

        <div class="form-group">
            <label class="text-info">Name: </label>
            <h3>@Model.Name</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Description: </label>
            <h3>@Model.Description</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Price: </label>
            <h3>@Model.Price</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Unit: </label>
            <h3>@Model.Unit</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Category Id: </label>
            <h3>@Model.CategoryId</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Images: </label>
            <br>
            @foreach(var item in Model.ProductImages)
            {
                <img src="@item.Name" style="width:120px; height:120px; margin-left:15px" />
            }
        </div>

        <a asp-action="Index" class="btn btn-light">Back</a>
    </form>
</div> 