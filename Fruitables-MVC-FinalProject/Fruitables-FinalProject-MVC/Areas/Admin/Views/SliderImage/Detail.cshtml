@model SliderImage

<div class="container mt-5">
    <form method="post" asp-action="Create" class="forms-sample">
        <div class="form-group">
            <label>Category Name: </label>
            <h3>@Model.CategoryName</h3>
        </div>
        <div class="form-group">
            <label>Image: </label>
            <img class="d-block" src="@Model.Image" style="width:120px; height:120px;" />
        </div>
        <div class="form-group">
            <label>Is Active: </label>
            <h3>@Model.IsActive</h3>
        </div>
        <a asp-action="Index" class="btn btn-light">Back</a>
    </form>
</div> 