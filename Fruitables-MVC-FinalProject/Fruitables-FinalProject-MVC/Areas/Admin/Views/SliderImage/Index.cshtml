
@model IEnumerable<SliderImage>
<div class="container">
    <h1 class="text-center mt-5">Slider Images</h1>
    <div class="table-responsive">
        <a class="btn btn-success" asp-action="Create">Create</a>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Is True</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td><img style="height: 100px; width: 100px;" src="@item.Image"></td>
                        <td>@item.IsActive</td>
                        <td class="d-flex" style="gap:10px;">
                            <button class="btn btn-danger delete-simg-btn" data-id="@item.Id">Delete</button>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }              
            </tbody>
        </table>
    </div>
</div>