@model Category

<div class="container mt-5">
    <form method="post" asp-action="Create" class="forms-sample">

        <div class="form-group">
            <label class="text-info">Name: </label>
            <h3>@Model.Name</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Is Active: </label>
            <h3>@Model.IsActive</h3>
        </div>

        <a asp-action="Index" class="btn btn-light">Back</a>
    </form>
</div> 