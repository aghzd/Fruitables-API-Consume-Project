@model StatsCardCreate

<div class="container mt-5">
    <form method="post" asp-action="Create" enctype="multipart/form-data" class="forms-sample">

        <div class="form-group">
            <label>Name: </label>
            <input asp-for="Name" class="form-control" maxlength="none">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Icon Name: </label>
            <input asp-for="IconName" class="form-control" maxlength="none">
            <span class="text-danger" asp-validation-for="IconName"></span>
        </div>

        <div class="form-group">
            <label>Value: </label>
            <input asp-for="Value" class="form-control" maxlength="none">
            <span class="text-danger" asp-validation-for="Value"></span>
        </div>

        <div class="form-group">
            <label>Is Percent: </label>
            <input asp-for="IsPercent" class="form-control" maxlength="none">
            <span class="text-danger" asp-validation-for="IsPercent"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>