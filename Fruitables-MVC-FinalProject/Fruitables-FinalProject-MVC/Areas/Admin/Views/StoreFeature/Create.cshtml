@model StoreFeatureCreate

<div class="container mt-5">
    <form method="post" asp-action="Create" enctype="multipart/form-data" class="forms-sample">
        <div class="form-group">
            <label>Icon Name: </label>
            <input asp-for="IconName" class="form-control" maxlength="none">
            <span class="text-danger" asp-validation-for="IconName"></span>
        </div>

        <div class="form-group">
            <label>Feature: </label>
            <input asp-for="Feature" class="form-control" maxlength="none">
            <span asp-validation-for="Feature" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Description: </label>
            <input asp-for="Description" class="form-control" maxlength="none">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>