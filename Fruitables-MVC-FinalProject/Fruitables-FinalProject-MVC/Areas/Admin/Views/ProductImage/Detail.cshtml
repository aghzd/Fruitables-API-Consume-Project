@model ProductImage

<div class="container mt-5">
    <form method="post" asp-action="Create" class="forms-sample">
        <div class="form-group">
            <label>Product Id: </label>
            <h3>@Model.ProductId</h3>
        </div>
        <div class="form-group">
            <label>Image: </label>
            <img class="d-block" src="@Model.Name" style="width:120px; height:120px;" />
        </div>
        <div class="form-group">
            <label>Is Main: </label>
            <h3>@Model.IsMain</h3>
        </div>
        <a asp-action="Index" class="btn btn-light">Back</a>
    </form>
</div> 