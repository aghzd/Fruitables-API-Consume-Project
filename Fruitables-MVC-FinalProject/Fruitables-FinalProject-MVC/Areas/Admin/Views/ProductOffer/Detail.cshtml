@model ProductOffer

<div class="container mt-5">
    <form method="post" asp-action="Create" class="forms-sample">
        <div class="form-group">
            <label>Name: </label>
            <h3>@Model.Name</h3>
        </div>
        <div class="form-group">
            <label>Description: </label>
            <h3>@Model.Description</h3>
        </div>
        <div class="form-group">
            <label>Image: </label>
            <img class="d-block" src="@Model.Image" style="width:120px; height:120px;" />
        </div>
        <div class="form-group">
            <label>Name Color: </label>
            <h3>@Model.NameColor</h3>
        </div>
        <div class="form-group">
            <label>Background Color: </label>
            <h3>@Model.BackgroundColor</h3>
        </div>
        <div class="form-group">
            <label>Text Color: </label>
            <h3>@Model.TextColor</h3>
        </div>
        <a asp-action="Index" class="btn btn-light">Back</a>
    </form>
</div> 