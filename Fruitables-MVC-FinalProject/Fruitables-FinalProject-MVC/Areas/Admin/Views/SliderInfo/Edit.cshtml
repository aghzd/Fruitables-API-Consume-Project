@model SliderInfoEdit

<div class="container mt-5">
    <form method="post" asp-action="Edit" enctype="multipart/form-data" class="forms-sample">

        <div class="form-group">
            <label>Title: </label>
            <input asp-for="Title" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        
        <div class="form-group">
            <label>Description: </label>
            <input asp-for="Description" class="form-control" maxlength="none">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label>New Image: </label>
            <input asp-for="BackgroundImage" type="file" class="form-control" />
            <span class="text-danger" asp-validation-for="BackgroundImage"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>