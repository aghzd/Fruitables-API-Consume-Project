@model IEnumerable<SliderInfo>

<div class="container">
    <h1 class="text-center mt-5">Slider Images</h1>
    <div class="table-responsive">
        <a class="btn btn-success" asp-action="Create">Create</a>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Background Image</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><img style="height: 100px; width: 100px;" src="@item.BackgroundImage"></td>
                        <td class="d-flex" style="gap:10px;">
                            <button class="btn btn-danger delete-sinfo-btn" data-id="@item.Id">Delete</button>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>