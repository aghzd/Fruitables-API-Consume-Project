@model SliderInfo

<div class="container mt-5">
    <form method="post" asp-action="Create" class="forms-sample">

        <div class="form-group">
            <label class="text-info">Title: </label>
            <h3>@Model.Title</h3>
        </div>
            
        <div class="form-group">
            <label class="text-info">Description: </label>
            <h3>@Model.Description</h3>
        </div>

        <div class="form-group">
            <label class="text-info">Background Image: </label>
            <img class="d-block" src="@Model.BackgroundImage" style="width:120px; height:120px;" />
        </div>

        <a asp-action="Index" class="btn btn-light">Back</a>
    </form>
</div> 